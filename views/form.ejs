<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Purchase Order Form</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body class="bg-light p-4">

<div class="container bg-white p-4 rounded shadow">
  <h4>Purchase Order | New</h4>

  <% if (typeof submittedData !== 'undefined') { %>
    <div class="alert alert-success"> Form Submitted Successfully</div>
    <pre><%= JSON.stringify(submittedData, null, 2) %></pre>
  <% } %>

  <form id="poForm" method="POST" action="/submit">

    <!-- first row with client and po basic info -->
    <div class="row mt-3">
      <div class="col-md-3">
        <label class="form-label">Client Name *</label>
        <select class="form-select" name="clientName" required>
          <option value="">-- Select Client --</option>
          <option>Collabera - Collabera Inc</option>
          <option>Other Client</option>
        </select>
      </div>
      <div class="col-md-3">
        <label class="form-label">Purchase Order Type *</label>
        <select class="form-select" id="poType" name="poType" required>
          <option value="">Select</option>
          <option>Group PO</option>
          <option>Individual PO</option>
        </select>
      </div>
      <div class="col-md-3">
        <label class="form-label">Purchase Order No *</label>
        <input type="text" class="form-control" name="poNumber" required>
      </div>
      <div class="col-md-3">
        <label class="form-label">Received On *</label>
        <input type="date" class="form-control" name="receivedOn" required>
      </div>
    </div>

    <!-- second row with from details and dates -->
    <div class="row mt-3">
      <div class="col-md-3">
        <label class="form-label">Received From (Name)*</label>
        <input type="text" class="form-control" name="receivedFromName" required>
      </div>
      <div class="col-md-3">
        <label class="form-label">Received From (Email)*</label>
        <input type="email" class="form-control" name="receivedFromEmail" required>
      </div>
      <div class="col-md-3">
        <label class="form-label">PO Start Date *</label>
        <input type="date" class="form-control" id="startDate" name="startDate" required>
      </div>
      <div class="col-md-3">
        <label class="form-label">PO End Date *</label>
        <input type="date" class="form-control" id="endDate" name="endDate" required>
      </div>
    </div>

    <!-- third row just for budget and currency -->
    <div class="row mt-3">
      <div class="col-md-3">
        <label class="form-label">Budget *</label>
        <input type="number" class="form-control" name="budget" max="99999" required>
      </div>
      <div class="col-md-3">
        <label class="form-label">Currency *</label>
        <select class="form-select" name="currency" required>
          <option>USD - Dollar ($)</option>
          <option>INR - Rupees (₹)</option>
          <option>EUR - Euro (€)</option>
        </select>
      </div>
    </div>

    <!-- section for talent stuff below -->
    <hr class="mt-4">
    <h5>Talent Detail</h5>
    <div id="talentReqs">
      <!-- one default req block already here -->
      <div class="req-section border p-3 mb-3 rounded">
        <div class="row">
          <div class="col-md-4">
            <label class="form-label">Job Title/REQ Name *</label>
            <select class="form-select jobTitle" name="jobTitle[]" required>
              <option value="">Select</option>
              <option value="Application Development">Application Development</option>
              <option value="Business Administrator">Business Administrator</option>
            </select>
          </div>
          <div class="col-md-4">
            <label class="form-label">Job ID/REQ ID*</label>
            <input type="text" class="form-control reqId" name="reqId[]" readonly>
          </div>
        </div>
        <div class="mt-3 talents">
          <!-- added talents will show up here dynamically -->
        </div>
      </div>
    </div>

    <!-- extra button to add more reqs if needed -->
    <button type="button" id="addReqBtn" class="btn btn-outline-primary mb-3" style="display:none">
      + Add Another
    </button>

    <!-- form action buttons at the end -->
    <div class="text-end">
      <button type="reset" class="btn btn-danger">Reset</button>
      <button type="submit" class="btn btn-success">Save</button>
    </div>
  </form>
</div>

<script src="/script.js"></script>
</body>
</html>